<div class="container">
	<div class='mt-4'>
		<div class='row'>

			{{#each devices}}
			<div class='col-sm-6 col-lg-6'>
				<div class='card card-device-item mt-4'>
					<div class='card-body'>
						<a href='/devices/{{this.slug}}' class="card-link">
							<h5 class='card-title'>{{this.name}}</h5>
						</a>
						<h6 class="card-subtitle mb-3 text-muted">{{ this.location }}</h6>
						<div class="container mb-3">
							<div class="row">
								<div class="col">Battery: {{ this.battery }}% </div>
								<div class="col">pH: {{ this.pH }}</div>
								<div class="w-100"></div>
								<div class="col">Temperature: {{ this.temperature }}°C</div>
								<div class="col">Conductivity: {{ this.conductivity }}µS/cm</div>
								<div class="w-100"></div>
								<div class="col">DO: {{ this.do }}%</div>
								<div class="col">ORP: {{ this.orp }}V</div>
							</div>
						</div>
						<a href="/devices/{{ this.slug }}" class="card-link">Details</a>
					</div>
				</div>
			</div>
			{{/each}}

		</div>
	</div>
</div>