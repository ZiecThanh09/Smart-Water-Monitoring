<div class='mt-1'>
    <div class='row' style="margin: 0 0 0 0;">
        <div class="col-lg-3 mt-5" style="padding-left: 50px;">
            <h2>Standard</h2>
            <h2 style="color: #25ca4b;" class="mt-5">
                pH
                <h4>&emsp; For living: 6 - 8.5</h4>
                <h4>&emsp; For drinking: 6.5 - 8.5</h4>
            </h2>
            <h2 style="color: #25ca4b;" class="mt-5">
                ORP
                <h4>&emsp;< -0.5V</h4>
            </h2>
            <h2 style="color: #25ca4b;" class="mt-5">
                DO (Theo KMnO4)
                <h4>&emsp; For living: < 0.0004%</h4>
                        <h4>&emsp; For drinking: < 0.0002%</h4>
            </h2>
            <h2 style="color: #25ca4b;" class="mt-5">
                Conductivity
                <h4>&emsp; For drinking: 50 - 1500 µS/cm</h4>
            </h2>
        </div>

        <div class="col-lg-9">
            <div class="row">
                {{#each devices}}
                <div class='col-sm-6 col-lg-4 mt-5' style="text-align: center;">
                    {{#compareStrings this.sensor 'BAT'}}
                    <span class='dot'>
                        <h3>{{ this.value }}%</h3>
                    </span>
                    <h4 class='name mt-2'>Battery</h4>
                    {{/compareStrings }}
                    {{#compareStrings this.sensor 'PH'}}
                    <span class='dot'>
                        <h3>{{ this.value }}</h3>
                    </span>
                    <h4 class='name mt-2'>pH</h4>
                    {{/compareStrings }}
                    {{#compareStrings this.sensor 'WT'}}
                    <span class='dot'>
                        <h3>{{ this.value }}°C</h3>
                    </span>
                    <h4 class='name mt-2'>Temperature</h4>
                    {{/compareStrings }}
                    {{#compareStrings this.sensor 'COND'}}
                    <span class='dot'>
                        <h3>{{ this.value }}µS/cm</h3>
                    </span>
                    <h4 class='name mt-2'>Conductivity</h4>
                    {{/compareStrings }}
                    {{#compareStrings this.sensor 'DO'}}
                    <span class='dot'>
                        <h3>{{ this.value }}%</h3>
                    </span>
                    <h4 class='name mt-2'>DO</h4>
                    {{/compareStrings }}
                    {{#compareStrings this.sensor 'ORP'}}
                    <span class='dot'>
                        <h3>{{ this.value }}V</h3>
                    </span>
                    <h4 class='name mt-2'>ORP</h4>
                    {{/compareStrings }}
                </div>
                {{/each}}

                <div class="status" style="text-align: center; width: 100%;">
                    <h3>Status</h3>
                    {{#isOr 'pH unsafe' 'DO unsafe'}}
                    <h3 style="color: red;">{{devices.6.status}}</h3>
                    {{else}}
                    <h3 style="color: green;">{{devices.6.status}}</h3>
                    {{/isOr}}
                </div>
            </div>
        </div>
    </div>
</div>