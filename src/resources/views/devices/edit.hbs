<div class='container mt-4'>
	<h3>Edit device</h3>

	<form class="mt-4" method="POST" action="/devices/{{device._id}}?_method=PUT">
		<div class='form-group'>
			<label for='name'>Name</label>
			<input type='text' class='form-control' value="{{device.name}}" id='name' name="name" />
		</div>
		<div class='form-group'>
			<label for='location'>Location</label>
			<input type='text' class='form-control' value="{{device.location}}" id='location' name="location" />
		</div>

		<button type='submit' class='btn btn-primary'>Save</button>
	</form>
</div>